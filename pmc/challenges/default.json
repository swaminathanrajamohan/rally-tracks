          "iterations": 1000,
          "target-throughput": 20
        },
        {
          "operation": "term",
          "clients": 1,
          "warmup-iterations": 500,
          "iterations": 1000,
          "target-throughput": 20
        },
        {
          "operation": "phrase",
          "clients": 1,
          "warmup-iterations": 500,
          "iterations": 1000,
          "target-throughput": 20
        },
        {
          "operation": "articles_monthly_agg_uncached",
